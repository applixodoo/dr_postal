<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_postal" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.postal</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="Postal Mail Tracking" data-string="Postal Mail Tracking" name="dr_postal">
                    <block title="Webhook Configuration" name="postal_webhook_config">
                        <setting 
                            string="Webhook Token"
                            help="Secret token to authenticate incoming webhooks from Postal server">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="dr_postal_webhook_token" class="col-lg-3 o_light_label"/>
                                    <field name="dr_postal_webhook_token" class="oe_inline" password="True"/>
                                </div>
                            </div>
                        </setting>
                        <setting 
                            string="Webhook URL"
                            help="Configure this URL in your Postal server webhook settings">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="dr_postal_webhook_url" class="col-lg-3 o_light_label"/>
                                    <field name="dr_postal_webhook_url" class="oe_inline" readonly="1" widget="CopyClipboardChar"/>
                                </div>
                            </div>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
