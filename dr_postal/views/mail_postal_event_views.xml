<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="mail_postal_event_view_tree" model="ir.ui.view">
        <field name="name">mail.postal.event.tree</field>
        <field name="model">mail.postal.event</field>
        <field name="arch" type="xml">
            <list string="Postal Events" default_order="event_datetime desc">
                <field name="event_datetime"/>
                <field name="event_type"/>
                <field name="recipient"/>
                <field name="external_message_id"/>
                <field name="message_id" optional="show"/>
                <field name="notification_id" optional="hide"/>
                <field name="error_message" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Simplified Tree View for Popup (only 3 columns, no selection) -->
    <record id="mail_postal_event_view_tree_popup" model="ir.ui.view">
        <field name="name">mail.postal.event.tree.popup</field>
        <field name="model">mail.postal.event</field>
        <field name="priority">999</field>
        <field name="arch" type="xml">
            <list string="Email Tracking" default_order="event_datetime desc" create="0" edit="0" delete="0" export_xlsx="0">
                <field name="event_datetime" string="Time" widget="datetime"/>
                <field name="event_type" string="Event"/>
                <field name="recipient" string="Recipient"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="mail_postal_event_view_form" model="ir.ui.view">
        <field name="name">mail.postal.event.form</field>
        <field name="model">mail.postal.event</field>
        <field name="arch" type="xml">
            <form string="Postal Event">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Event Details">
                            <field name="event_type"/>
                            <field name="event_datetime"/>
                            <field name="recipient"/>
                            <field name="external_message_id"/>
                            <field name="postal_tracking_uuid"/>
                        </group>
                        <group string="Odoo References">
                            <field name="message_id"/>
                            <field name="notification_id"/>
                        </group>
                    </group>
                    <group string="Error Information" invisible="event_type != 'bounced'">
                        <field name="error_message" nolabel="1"/>
                    </group>
                    <group string="Raw Payload">
                        <field name="payload_json" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="mail_postal_event_view_search" model="ir.ui.view">
        <field name="name">mail.postal.event.search</field>
        <field name="model">mail.postal.event</field>
        <field name="arch" type="xml">
            <search string="Search Postal Events">
                <field name="recipient"/>
                <field name="external_message_id"/>
                <field name="event_type"/>
                <filter string="Sent" name="sent" domain="[('event_type', '=', 'sent')]"/>
                <filter string="Delivered" name="delivered" domain="[('event_type', '=', 'delivered')]"/>
                <filter string="Opened" name="opened" domain="[('event_type', '=', 'opened')]"/>
                <filter string="Bounced" name="bounced" domain="[('event_type', '=', 'bounced')]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="mail_postal_event_action" model="ir.actions.act_window">
        <field name="name">Postal Events</field>
        <field name="res_model">mail.postal.event</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="mail_postal_event_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No postal events yet
            </p>
            <p>
                Postal events will appear here when your Postal server sends webhooks for sent, delivered, opened, or bounced emails.
            </p>
        </field>
    </record>

    <!-- Popup Action for viewing events from chatter -->
    <record id="mail_postal_event_action_popup" model="ir.actions.act_window">
        <field name="name">Email Tracking</field>
        <field name="res_model">mail.postal.event</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="mail_postal_event_view_tree_popup"/>
        <field name="target">new</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No tracking events yet
            </p>
        </field>
    </record>

    <!-- Menu under Settings > Technical > Email -->
    <menuitem 
        id="mail_postal_event_menu"
        name="Postal Events"
        parent="base.menu_email"
        action="mail_postal_event_action"
        groups="base.group_system"
        sequence="100"/>
</odoo>
