<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!-- Add t-ref to popover root for accessing message ID -->
    <t t-name="mail.MessageNotificationPopover" t-inherit="mail.MessageNotificationPopover" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o-mail-MessageNotificationPopover')]" position="attributes">
            <attribute name="t-ref">root</attribute>
        </xpath>
    </t>

</templates>

